<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
    <style><% include style.css %></style>
    <script><%- locals.script %></script>
  </head>
  <body>
    <div class="row container">
      <div class="col-sm-12 col-md-4">
        <div class="row">

          <div class="col-sm-12">
            <div id="carousel-container">
                <% for(var i=0; i<images.length; i++) { %>
                    <img
                      class="thumbnail"
                      src="<%= images[i] %>"
                    />
                <% } %>
            </div>
          </div>

          <div class="col-sm-12 description-container">
            <p id="description" class="description">
              <%= description %>
            <p />
          </div>
          
          <div class="col-sm-12 button-container">
            <a
              id="button"
              href="<%= locals.buttonUrl %>"
              class="button primary large link-button"
            >
              <%= locals.buttonText || 'Download For Free' %>
            </a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
